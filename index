<body>
  <h1>Simulateur d’éligibilité Kap TPE</h1>
  <form id="kapForm">
    <label for="ape">Code APE :</label>
    <input type="text" id="ape" required>

    <label for="ca">CA annuel (€ HT) :</label>
    <input type="number" id="ca" required>

    <label for="salaries">Nombre de salariés :</label>
    <input type="number" id="salaries" required>

    <label for="montant">Montant projet (€ HT) :</label>
    <input type="number" id="montant" required>

    <label for="hauts">Votre entreprise est-elle située dans les Hauts ?</label>
    <select id="hauts">
      <option value="non">Non</option>
      <option value="oui">Oui</option>
    </select>

    <button type="submit">Vérifier</button>
  </form>
  <div id="resultat"></div>

  <script>
    const codesEligibles = ["4332A", "5610A", "9602B", "4932Z", "4334Z"];

    document.getElementById("kapForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const ape = document.getElementById("ape").value.trim().toUpperCase();
      const ca = parseFloat(document.getElementById("ca").value);
      const salaries = parseInt(document.getElementById("salaries").value);
      const montant = parseFloat(document.getElementById("montant").value);
      const hauts = document.getElementById("hauts").value;

      const eligible = 
        codesEligibles.includes(ape) &&
        ca <= 1000000 &&
        salaries < 10 &&
        montant >= 5001 && montant <= 19999 &&
        hauts === "non";

      document.getElementById("resultat").innerHTML = eligible
        ? "<p style='color: #00e676;'>✅ Vous êtes potentiellement éligible au Kap TPE.</p>"
        : "<p style='color: red;'>❌ Vous ne remplissez pas tous les critères d’éligibilité.</p>";
    });
  </script>
